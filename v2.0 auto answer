(function() {
  // Fetch do script principal
  fetch("https://raw.githubusercontent.com/cthelegend/khandestroyer/refs/heads/main/v2.0 auto answer")
    .then(t => t.text())
    .then(script => {
      // Incluir o CSS diretamente na página
      const style = document.createElement('style');
      style.innerHTML = `
        /* Animação de rachado da logo */
        @keyframes crackAnimation {
          0% {
            transform: scale(1);
            color: white;
          }
          50% {
            transform: scale(1.2);
            color: red;
          }
          100% {
            transform: scale(1.5);
            color: red;
          }
        }

        /* Estilo do splashscreen */
        splashScreen {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: #000;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          z-index: 9999;
          opacity: 0;
          transition: opacity 0.5s ease;
          user-select: none;
          color: white;
          font-family: MuseoSans, sans-serif;
          font-size: 30px;
          text-align: center;
        }

        /* Logo centralizada e com animação */
        .logo-container {
          display: flex;
          justify-content: center;
          align-items: center;
          margin-bottom: 20px;
        }

        .logo {
          width: 100px; /* Ajuste o tamanho conforme necessário */
          height: auto;
          transition: transform 0.3s ease, color 0.3s ease;
          animation: crackAnimation 1s ease-out forwards; /* Animação de rachado */
        }

        /* Estilo do texto */
        .text {
          font-size: 30px;
          color: white;
        }
      `;
      document.head.appendChild(style); // Adiciona o CSS ao documento

      // Criando o splash screen com logo e texto
      const splashScreen = document.createElement('div');
      splashScreen.innerHTML = `
        <div class="logo-container">
          <img src="https://i.imgur.com/6WneKiZ.png" class="logo" alt="Logo Khan" />
        </div>
        <div class="text">
          <span>Khan</span><span style="color:#ff0000;"> Destroyer V2.0 (AA)</span>
        </div>
      `;
      document.body.appendChild(splashScreen);

      // Exibir a tela splash com animação
      setTimeout(() => splashScreen.style.opacity = '1', 10);

      // Executa o script carregado
      eval(script);
    })
    .catch(error => console.error('Erro ao carregar o script:', error));
})();
