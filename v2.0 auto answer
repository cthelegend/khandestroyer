(function() {
  // Verifica se o splash já foi adicionado
  if (document.getElementById('splashScreen')) return;

  // Fetch do script principal
  fetch("https://raw.githubusercontent.com/cthelegend/khandestroyer/refs/heads/main/v2.0%20auto%20answer")
    .then(t => t.text())
    .then(script => {
      // Adiciona o CSS dinamicamente
      const style = document.createElement('style');
      style.innerHTML = `
        /* Animação de rachado da logo */
        @keyframes crackAnimation {
          0% {
            transform: scale(1);
            opacity: 1;
            filter: hue-rotate(0deg);
          }
          50% {
            transform: scale(1.2);
            opacity: 1;
            filter: hue-rotate(180deg); /* A cor muda para vermelho */
          }
          100% {
            transform: scale(1.5);
            opacity: 0; /* A logo desaparece ao final */
            filter: hue-rotate(180deg); /* A cor final é vermelha */
          }
        }

        /* Estilo da tela splash */
        #splashScreen {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: #000;
          display: flex;
          justify-content: center;
          align-items: center;
          z-index: 9999;
          opacity: 0;
          transition: opacity 0.5s ease;
          user-select: none;
          color: white;
          font-family: MuseoSans, sans-serif;
          font-size: 30px;
          text-align: center;
        }

        /* Contêiner da logo e texto */
        .logo-text-container {
          display: flex;
          align-items: center;
          justify-content: center;
          font-size: 30px;
        }

        /* Logo PNG */
        .logo {
          width: 100px; /* Ajuste o tamanho conforme necessário */
          height: auto;
          margin-right: 20px; /* Espaço entre a logo e o texto */
          animation: crackAnimation 2s ease-out forwards; /* Animação de rachado */
        }

        /* Estilo do texto */
        .text {
          display: inline-block;
        }

        /* Texto colorido */
        .text span {
          color: #ff0000;
        }
      `;
      document.head.appendChild(style); // Adiciona o CSS ao documento

      // Criando o splash screen com logo e texto na mesma linha
      const splashScreen = document.createElement('div');
      splashScreen.id = 'splashScreen';
      splashScreen.innerHTML = `
        <div class="logo-text-container">
          <img src="https://i.imgur.com/6WneKiZ.png" class="logo" alt="Logo Khan" />
          <div class="text">
            <span>Khan</span><span> Destroyer V2.0 (AA)</span>
          </div>
        </div>
      `;
      document.body.appendChild(splashScreen);

      // Exibir a tela splash com animação
      setTimeout(() => splashScreen.style.opacity = '1', 10);

      // Executa o script carregado
      eval(script);
    })
    .catch(error => console.error('Erro ao carregar o script:', error));
})();
