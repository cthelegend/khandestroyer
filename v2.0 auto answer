(function() {
  // Fetch do script principal
  fetch("https://raw.githubusercontent.com/cthelegend/khandestroyer/refs/heads/main/v2.0%20auto%20answer")
    .then(t => t.text())
    .then(script => {
      // Incluir o CSS diretamente na página
      const style = document.createElement('style');
      style.innerHTML = `
        /* Animação de rachado da logo */
        @keyframes crackAnimation {
          0% {
            transform: scale(1);
            color: white;
            opacity: 1;
          }
          50% {
            transform: scale(1.2);
            color: red;
            opacity: 1;
          }
          100% {
            transform: scale(1.5);
            color: red;
            opacity: 0; /* A logo desaparece ao final da animação */
          }
        }

        /* Estilo do splashscreen */
        splashScreen {
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-color: #000;
          display: flex;
          align-items: center;
          justify-content: center;
          z-index: 9999;
          opacity: 0;
          transition: opacity 0.5s ease;
          user-select: none;
          color: white;
          font-family: MuseoSans, sans-serif;
          font-size: 30px;
          text-align: center;
        }

        /* Contêiner da logo e texto na mesma linha */
        .logo-text-container {
          display: flex;
          align-items: center;
          justify-content: center;
          color: white;
        }

        /* Logo PNG */
        .logo {
          width: 60px; /* Ajuste o tamanho conforme necessário */
          height: auto;
          margin-right: 10px; /* Espaço entre a logo e o texto */
          animation: crackAnimation 1s ease-out forwards; /* Animação de rachado */
        }

        /* Estilo do texto */
        .text {
          font-size: 30px;
        }

        /* Texto colorido */
        .text span {
          color: #ff0000;
        }
      `;
      document.head.appendChild(style); // Adiciona o CSS ao documento

      // Criando o splash screen com logo e texto na mesma linha
      const splashScreen = document.createElement('div');
      splashScreen.innerHTML = `
        <div class="logo-text-container">
          <img src="https://i.imgur.com/6WneKiZ.png" class="logo" alt="Logo Khan" />
          <div class="text">
            <span>Khan</span><span> Destroyer V2.0 (AA)</span>
          </div>
        </div>
      `;
      document.body.appendChild(splashScreen);

      // Exibir a tela splash com animação
      setTimeout(() => splashScreen.style.opacity = '1', 10);

      // Executa o script carregado
      eval(script);
    })
    .catch(error => console.error('Erro ao carregar o script:', error));
})();
